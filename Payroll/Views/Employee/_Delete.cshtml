<div>
    <form method="post" enctype='multipart/form-data' asp-action="Delete">
        <h2 style="color:red"> Are you sure you want to delete this employee</h2>
        <div class="form-group ">
            <input type="hidden" id="idEmployee" >
            <input id="fullName" class="form-control font-weight-bolder" readonly style="background-color: #293043" />
            <input id="emploNo" class="form-control font-weight-bolder" readonly style="background-color: #293043" />
        </div>
        <div class="form-group col-md-12">

            <button onclick="deleteEmployee($('#idEmployee').val())" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Delete</button>
            <a asp-action="Index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
            <br />
            <br />
            <br />
        </div>
    </form>
</div>