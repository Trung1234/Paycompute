@model IEnumerable<Paycompute.Models.Employee.EmployeeDisplayViewModel>

@{ 
    ViewBag.Title = "Employee";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card ">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb " >
                        <li class="breadcrumb-item"><a  asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav>
                <nav><br/></nav>
                <div class="row">
                    <div class="row">
                        <div class="col-md-12 table-responsive-md">
                            <a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create">New Employee</a>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Employee No.</th>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Designation</th>
                                        <th>City</th>
                                        <th>Joined</th>
                                        <th class="text-warning">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model)
                                    {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@employee.Id">@employee.EmployeeNo</a>
                                        </td>
                                        <td>
                                            <img alt="img" src="@Url.Content(employee.ImageUrl)" />
                                        </td>
                                        <td> @employee.FullName</td>
                                        <td> @employee.Gender</td>
                                        <td> @employee.Designation</td>
                                        <td> @employee.City</td>
                                        <td> @employee.DateJoined.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a class="text-primary" asp-action="Edit" asp-route-id="@employee.Id">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a class="text-success" asp-action="Detail" asp-route-id="@employee.Id">
                                                <i class="fas fa-bars"></i> Detail
                                            </a>
                                            <a class="text-danger" asp-action="Delete" asp-route-id="@employee.Id">
                                                <i class="far fa-trash-alt"></i> Delete
                                            </a>
                                        </td>
                                    </tr>                                      
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>